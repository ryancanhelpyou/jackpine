{% extends "base.twig" %}

{% block content %}
    <article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
        <section>
            {% if not is_front_page %}
            <h1>{{post.title}}</h1>
            {% endif %}
            <div>
                {{post.content}}
            </div>
        </section>
    </article>
{% endblock %}
